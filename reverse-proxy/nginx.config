events {}

http {
  upstream client-app {
    server client-app:3000;
  }

  upstream admin-app {
    server admin-app:4000;
  }

  server {
    listen 80;

    # Route /admin to admin-app
    location /admin/ {
      proxy_pass http://admin-app/;
      rewrite ^/admin(/.*)$ $1 break;
      proxy_http_version 1.1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }

    # Route all other traffic to client-app
    location / {
      proxy_pass http://client-app/;
      proxy_http_version 1.1;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }
  }
}
